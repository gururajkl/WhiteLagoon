@model int
@{
    ViewData["Title"] = "Happy Vacation";
}

<div class="container pb-4 pt-4">
    <div class="col-12 text-center">
        <h1 class="text-success text-center">Your Vacation is Confirmed!</h1>
        Your Order Number is : @Model<br />
        <p>You can view all order details in Manage Order Section.</p>
        <img src="~/images/orderConfirmed.jpg" style="border-radius:20px" width="50%" />
    </div>
    <div class="col-12 text-center text-warning">
        <p class="pt-4">Pack your bags! You are one step closer to an amazing vacation!</p>
        <a asp-action="Index" asp-route-status="@StaticDetails.StatusApproved" asp-controller="Booking" class="btn btn-success">Checkout Bookings</a>
    </div>
</div>