@{
    ViewData["Title"] = "Delete Villa";
}
@model Villa

<div class="w-100 card border-0 p-4">
    <div class="card-header border ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="py-2">Delete Villa - @Model.Name</h2>
            </div>
        </div>
    </div>

    <div class="card-body border rounded-bottom p-4">
        <form class="row" method="post">
            <div class="col-10">
                <div class="p-3">
                    <input asp-for="Id" hidden />

                    <div class="text-danger" asp-validation-summary="None"></div>

                    <div class="py-1 col-12 form-floating">
                        <input disabled asp-for="Name" class="form-control border shadow" />
                        <label class="form-label" asp-for="Name"></label>
                    </div>

                    <div class="py-1 col-12 form-floating">
                        <textarea disabled asp-for="Description" class="form-control border shadow"></textarea>
                        <label class="form-label" asp-for="Description"></label>
                    </div>

                    <div class="py-1 col-12 form-floating">
                        <input disabled asp-for="Price" class="form-control border shadow" />
                        <label class="form-label" asp-for="Price"></label>
                    </div>

                    <div class="py-1 col-12 form-floating">
                        <input disabled asp-for="Sqft" class="form-control border shadow" />
                        <label class="form-label" asp-for="Sqft"></label>
                    </div>

                    <div class="py-1 col-12 form-floating">
                        <input disabled asp-for="Occupancy" class="form-control border shadow" />
                        <label class="form-label" asp-for="Occupancy"></label>
                    </div>

                    <div class="py-1 col-12 form-floating">
                        <input disabled asp-for="ImageUrl" class="form-control border shadow" />
                        <label class="form-label" asp-for="ImageUrl"></label>
                    </div>

                    <div class="row pt-2">
                        <div class="col-6 col-md-3">
                            <button type="submit" class="btn btn-outline-danger w-100">
                                <i class="bi bi-trash-fill"></i>&nbsp; Delete
                            </button>
                        </div>
                        <div class="col-6 col-md-3">
                            <a asp-action="Index" class="btn btn-outline-success w-100">
                                <i class="bi bi-x-circle"></i>&nbsp; Cancel
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-2">
                @if (Model.ImageUrl!.Contains("placehold"))
                {
                    <img src="@Model.ImageUrl" style="width: 100%; border: 1px solid #bbb9b9; border-radius: 5px" />
                }
                else
                {
                    <img src="~/@Model.ImageUrl" style="width: 100%; border: 1px solid #bbb9b9; border-radius: 5px" />
                }
            </div>
        </form>
    </div>
</div>