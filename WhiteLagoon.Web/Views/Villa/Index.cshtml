@model List<Villa>
@{
    ViewData["Title"] = "Villas";
}

<div class="w-100 card border-0 p-4">
    <div class="card-header border ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Villa List</h2>
            </div>
        </div>
    </div>

    <div class="card-body border rounded-bottom p-4">
        <div class="row pb-4">
            <div class="col-6 offset-6 text-end">
                <a asp-controller="Villa" asp-action="Create" class="btn btn-outline-light">
                    <i class="bi bi-plus-circle"></i> Create new villa
                </a>
            </div>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Sqft</th>
                    <th>Occupancy</th>
                    <th>Actions</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var villa in Model)
                {
                    <tr>
                        <td>@villa.Name</td>
                        <td>@villa.Price</td>
                        <td>@villa.Sqft</td>
                        <td>@villa.Occupancy</td>
                        <td>
                            <a class="btn btn-outline-warning w-auto"><i class="bi bi-pencil-fill"></i> Modify</a>
                            <a class="btn btn-outline-danger mx-2 w-auto"><i class="bi bi-trash"></i> Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>