@{
    ViewData["Title"] = "Login";
}
@model LoginViewModel

<div class="container pt-5 pb-5">
    <div class="card shadow border">
        <div class="card-header ml-0 py-4">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="py-2">Login</h2>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            <div class="row">
                <div class="col-md-12">
                    <section>
                        <form method="post">
                            <input asp-for="RedirectUrl" hidden />
                            <div class="form-floating mb-3">
                                <input asp-for="Email" class="form-control" aria-required="true" />
                                <label asp-for="Email" class="form-label"></label>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-3">
                                <input asp-for="Password" class="form-control" aria-required="true" />
                                <label asp-for="Password" class="form-label"></label>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="checkbox mb-3">
                                <input asp-for="RememberMe" class="form-check-input" type="checkbox" />
                                <label asp-for="RememberMe" class="form-label"></label>
                            </div>
                            <div>
                                <button type="submit" class="w-100 btn btn-lg btn-outline-success">Get me in</button>
                            </div>
                            <div class="d-flex justify-content-between pt-3">
                                <p>
                                    <a asp-action="ForgotPassword">Forgot your password?</a>
                                </p>
                                <p>
                                    <a asp-action="Register" asp-route-returnUrl="@Model.RedirectUrl"
                                        asp-controller="Account">Register as a new user</a>
                                </p>
                            </div>
                        </form>
                    </section>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}