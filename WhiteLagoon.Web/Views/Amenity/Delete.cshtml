@{
    ViewData["Title"] = "Delete Amenity";
}
@model AmenityViewModel

<div class="w-100 card border-0 p-4">
    <div class="card-header border ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Amenity @Model.Amenity!.Name</h2>
            </div>
        </div>
    </div>

    <div class="card-body border rounded-bottom p-4">
        <form class="row" method="post">
            <input asp-for="Amenity!.Id" hidden />
            <div class="p-3">
                <div class="text-danger" asp-validation-summary="None"></div>

                <div class="py-1 col-12 form-floating">
                    <select disabled class="form-select shadow border" asp-for="@Model.Amenity!.VillaId" asp-items="@Model.VillaList">
                        <option selected>Select Villa</option>
                    </select>
                    <label class="form-label" asp-for="Amenity!.VillaId"></label>
                </div>

                <div class="py-1 col-12 form-floating">
                    <input disabled asp-for="Amenity!.Name" class="form-control border shadow" />
                    <label class="form-label" asp-for="Amenity!.Name"></label>
                </div>

                <div class="py-1 col-12 form-floating">
                    <textarea style="height: fit-content;" disabled asp-for="Amenity!.Description" class="form-control border shadow"></textarea>
                    <label class="form-label" asp-for="Amenity!.Description"></label>
                </div>

                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-outline-danger w-100">
                            <i class="bi bi-check-circle"></i>&nbsp; Delete
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-action="Index" class="btn btn-outline-success w-100">
                            <i class="bi bi-x-circle"></i>&nbsp; Cancel
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>